{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug api",
      "cwd": "${workspaceFolder}/api",
      "request": "launch",
      "type": "node",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["dev:tsnode"],
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "presentation": {
        "hidden": false,
        "group": "api",
        "order": 1
      }
    },
    {
      "name": "Debug graphql (edge)",
      "type": "pwa-msedge",
      "request": "launch",
      "runtimeExecutable": "dev",
      "runtimeArgs": ["dev"],
      "sourceMaps": false,
      "url": "http://localhost:8008/graphql",
      "userDataDir": "${workspaceFolder}/.out/edge/graphql",
      "internalConsoleOptions": "neverOpen",
      "smartStep": true,
      "presentation": {
        "hidden": false,
        "group": "api",
        "order": 2
      }
    },
    {
      "name": "Debug demo (server)",
      "cwd": "${workspaceFolder}/apps/demo",
      "request": "launch",
      "type": "node",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["dev"],
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "presentation": {
        "hidden": false,
        "group": "demo",
        "order": 1
      }
    },
    {
      "name": "Debug demo (edge)",
      "type": "pwa-msedge",
      "request": "launch",
      "runtimeExecutable": "dev",
      "url": "https://localhost:8000",
      "webRoot": "${workspaceFolder}/apps/demo/src",
      "skipFiles": ["<node_internals>/**"],
      "userDataDir": "${workspaceFolder}/.out/edge/apps/demo",
      "internalConsoleOptions": "neverOpen",
      "smartStep": true,
      "sourceMaps": true,
      "presentation": {
        "hidden": false,
        "group": "demo",
        "order": 2
      }
    },
    {
      "name": "Attach demo (edge-devtools)",
      "type": "vscode-edge-devtools.debug",
      "request": "attach",
      "url": "http://localhost:8000",
      "webRoot": "${workspaceFolder}/apps/demo/src",
      "presentation": {
        "hidden": false,
        "group": "demo",
        "order": 3
      }
    }
  ],
  "compounds": [
    {
      "name": "Launch api",
      "configurations": ["Debug api", "Debug graphql (edge)"],
      "stopAll": true
    },
    {
      "name": "Launch demo",
      "configurations": ["Debug demo (server)", "Debug demo (edge)"],
      "stopAll": true
    },
    {
      "name": "Launch demo/api",
      "configurations": ["Debug api", "Debug demo (server)", "Debug demo (edge)"],
      "stopAll": true
    }
  ]
}
