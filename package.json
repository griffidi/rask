{
  "name": "@rask/root",
  "description": "Rask Lit based Monorepo",
  "version": "0.0.1",
  "private": false,
  "license": "MIT",
  "author": {
    "name": "Dustin Griffith",
    "email": "dustingriffith@outlook.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/griffidi/rask.git"
  },
  "keywords": [
    "lit",
    "@lit/reactive-element",
    "@lit-labs/context",
    "@lit-labs/task",
    "@material/web",
    "signals"
  ],
  "packageManager": "pnpm@8.6.0",
  "engines": {
    "node": ">=18.17",
    "pnpm": ">=8.6.0"
  },
  "type": "module",
  "workspaces": [
    "api/",
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "6.7.4",
    "@typescript-eslint/parser": "6.7.4",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-lit": "^1.9.1",
    "eslint-plugin-prettier": "^5.0.0",
    "pnpm": "^8.6.12",
    "prettier": "^3.0.1",
    "prettier-plugin-multiline-arrays": "^2.0.0"
  },
  "pnpm": {
    "overrides": {
      "@rask/core": "workspace:*",
      "@rask/web": "workspace:*",
      "typescript": "5.3.0-beta"
    },
    "peerDependencyRules": {
      "allowAny": [
        "@types/node"
      ],
      "ignoreMissing": [
        "typescript"
      ]
    }
  }
}
