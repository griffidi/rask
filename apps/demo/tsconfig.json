{
  "extends":  ["../../tsconfig.base.json" ,"../../tsconfig.lit.json"],
  "compilerOptions": {
    "rootDir": ".",
    "paths": {
      "#/*": ["./src/*"],
      "@rask/core/*":  ["../../packages/core/src/*"],
      "@rask/identity/*":  ["../../packages/identity/src/*"],
      "@rask/web/*":  ["../../packages/web/src/*"]
